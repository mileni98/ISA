@model Hospital.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation for drug @ViewData["drugName"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" readonly/>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="PharmacyId" class="form-control">
                    @foreach (var item in (List<Pharmacy>)@ViewData["pharmacies"])
                    {
                        <option value=@item.Id class="option">@item.Name</option>
                    }
                </select>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ItemId" />
            <input type="hidden" asp-for="CreationTime" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
