@model Hospital.Models.DTO.WorkingContractDTO
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WorkingContract</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkerId" class="control-label"></label>
                <select asp-for="WorkerId" class="form-control">
                    @foreach (IdentityUser item in (List<IdentityUser>)@ViewData["workers"])
                    {
                        <option value=@item.Id class="option">@item.UserName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PharmacyId" class="control-label"></label>
                <select asp-for="PharmacyId" class="form-control">
                    @foreach (Hospital.Models.Pharmacy item in (List<Hospital.Models.Pharmacy>)@ViewData["pharmacies"])
                    {
                        <option value=@item.Id class="option">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingTimeStart" class="control-label"></label>
                <input asp-for="WorkingTimeStart" class="form-control" min="0" max="23"/>
                <span asp-validation-for="WorkingTimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingTimeEnd" class="control-label"></label>
                <input asp-for="WorkingTimeEnd" class="form-control" min="0" max="23"/>
                <span asp-validation-for="WorkingTimeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
